# x402 MCP Server Configuration

# Wallet Private Key (for signing transactions)
# IMPORTANT: Never commit your actual private key to version control
X402_WALLET_PRIVATE_KEY=your_private_key_here

# RPC URLs for different networks
X402_RPC_URL=https://mainnet.base.org
X402_ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
X402_POLYGON_RPC_URL=https://polygon-rpc.com

# Payment receiving addresses for different networks
X402_BASE_ADDRESS=0xYourBaseAddressHere
X402_ETH_ADDRESS=0xYourEthereumAddressHere
X402_POLYGON_ADDRESS=0xYourPolygonAddressHere

# API Keys (if needed for RPC providers)
ALCHEMY_API_KEY=your_alchemy_api_key
INFURA_API_KEY=your_infura_api_key

# Server Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000
HOST=0.0.0.0

# HTTP API Server Configuration
SERVICE_URL=http://localhost:3000
X402_PAYMENT_ADDRESS_BASE=0xYourBasePaymentAddressHere
X402_PAYMENT_ADDRESS_ETH=0xYourEthereumPaymentAddressHere

# Data Source API Keys
COINGECKO_API_KEY=                    # Optional - free tier doesn't need key
ETHERSCAN_API_KEY=                    # Required for transaction verification
GOPLUS_API_KEY=                       # Optional - free tier doesn't need key
THE_GRAPH_API_KEY=                    # Optional - can use public endpoints

# RPC URLs for payment verification
RPC_BASE=https://mainnet.base.org
RPC_ETH=https://eth.llamarpc.com
RPC_POLYGON=https://polygon-rpc.com
RPC_ARBITRUM=https://arb1.arbitrum.io/rpc
RPC_OPTIMISM=https://mainnet.optimism.io

# Cache Configuration
CACHE_TTL=10                          # Cache time-to-live in seconds
RATE_LIMIT_FREE=10                    # Free tier daily limit
RATE_LIMIT_PAID=10000                 # Paid tier daily limit
